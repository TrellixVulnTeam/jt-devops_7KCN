# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.6/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.

[mysqld]
#server_id = 1
#log-bin = mysql-master
#binlog-format = mixed
datadir={{ mysql_path }}
port={{ mysql_port }}
socket={{ mysql_path }}/mysql.sock
log-error={{ mysql_path }}/{{ inventory_hostname }}.err
pid-file={{ mysql_path }}/{{ inventory_hostname }}.pid


skip-name-resolve
max_connections=2000
innodb_buffer_pool_size=3G
innodb_buffer_pool_instances=3
query_cache_size=512M
query_cache_type=1
expire_logs_days=15
table_definition_cache=700
table_open_cache=800
max_allowed_packet = 20M
tmp_table_size = 64M

sort_buffer_size = 2M
read_buffer_size = 2M
join_buffer_size = 250K
innodb_log_buffer_size = 8M
thread_stack = 256K
innodb_log_file_size=384M

log_output=file
slow_query_log='ON'
slow_query_log_file = /data/jtb/infra/mysql-logs/mysql-slow.log
log_queries_not_using_indexes=on
long_query_time = 5
wait_timeout=300
interactive_timeout=300

# Remove leading # and set to the amount of RAM for the most important data
# cache in MySQL. Start at 70% of total RAM for dedicated server, else 10%.
# innodb_buffer_pool_size = 128M

# Remove leading # to turn on a very important data integrity option: logging
# changes to the binary log between backups.
# log_bin

